<Window x:Class="PalettePicker.OptionsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PalettePicker"
        mc:Ignorable="d"
        Title="Options" 
        ResizeMode="NoResize"
        Height="500" 
        Width="650"
        Background="{DynamicResource P1}">

    <Grid>

        <TextBlock
            x:Name="Txt_WindowTitle"
            VerticalAlignment="Top"
            HorizontalAlignment="Center"
            Text="Options"
            Foreground="{DynamicResource T}"
            FontFamily="Montserrat"
            FontSize="25"
            FontWeight="DemiBold"
            Margin="0,10,0,0"/>

        <StackPanel
            Margin="0,50,0,0"
            Orientation="Horizontal">

            <Border
                Width="210"
                Height="370"
                Margin="25,0,0,0"
                CornerRadius="10"
                Background="Transparent"
                BorderBrush="{DynamicResource P2}"
                BorderThickness="1">

                <StackPanel
                    x:Name="Stp_SettingsTabs"
                    Width="200"
                    Height="360"
                    HorizontalAlignment="Center">

                    <Button
                        x:Name="Btn_Language"
                        Click="Btn_Preferences_Click" 
                        Background="Transparent"
                        BorderBrush="Transparent"
                        Foreground="{DynamicResource T}"
                        Content="Language"
                        FontFamily="Montserrat"
                        FontSize="20"/>
                </StackPanel>
            </Border>


            <Grid
                Margin="10,0,0,0"
                Width="375"
                Height="370">

                <Border
                    BorderBrush="{DynamicResource P2}"
                    BorderThickness="1"
                    CornerRadius="10">

                    <Grid
                        x:Name="Grd_Language">

                        <TextBlock
                            x:Name="Txt_Language_Title"
                            Text="Language"
                            Foreground="{DynamicResource T}"
                            FontFamily="Montserrat"
                            FontSize="20"
                            VerticalAlignment="Top"
                            HorizontalAlignment="Center"
                            Margin="0,5,0,0"/>
                    </Grid>
                </Border>
            </Grid>
        </StackPanel>
    </Grid>
</Window>
