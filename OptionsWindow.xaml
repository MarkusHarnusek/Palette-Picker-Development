<Window x:Class="PalettePicker.OptionsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PalettePicker"
        mc:Ignorable="d"
        Title="Options" 
        ResizeMode="NoResize"
        Height="500" 
        Width="650"
        Background="{DynamicResource P1}">

    <Grid>

        <TextBlock
            x:Name="Txt_WindowTitle"
            VerticalAlignment="Top"
            HorizontalAlignment="Center"
            Text="Options"
            Foreground="{DynamicResource T}"
            FontFamily="Montserrat"
            FontSize="25"
            FontWeight="DemiBold"
            Margin="0,10,0,0"/>

        <StackPanel
            x:Name="Stp_SettingsTabs"
            Width="200"
            Margin="25,50,0,25"
            HorizontalAlignment="Left">

            <Button
                x:Name="Btn_Preferences"
                Margin="5,5,5,0"
                Height="30"
                Background="{DynamicResource S1}"
                BorderBrush="Transparent"
                Foreground="{DynamicResource T}"
                Content="Preferences"
                FontFamily="Montserrat"
                FontSize="20"/>

        </StackPanel>

        <Grid
            VerticalAlignment="Top"
            HorizontalAlignment="Right"
            Margin="0,60,25,0"
            Width="375"
            Height="325">

            <Grid
                x:Name="Grd_Preferences">

                <TextBlock
                    x:Name="Txt_Preferences_Title"
                    Text="Preferences"
                    Foreground="{DynamicResource T}"
                    FontFamily="Montserrat"
                    FontSize="20"
                    VerticalAlignment="Top"
                    HorizontalAlignment="Center"
                    Margin="0,5,0,0"/>

                <StackPanel
                    Width="325"
                    Height="325"
                    Margin="0,25,0,0"
                    VerticalAlignment="Top"
                    HorizontalAlignment="Center">

                    <StackPanel
                        Height="35"
                        Margin="0,10,0,10"
                        Orientation="Horizontal">

                        <TextBlock
                            x:Name="Txt_Preferences_Language_Title"
                            Text="Language:"
                            Foreground="{DynamicResource T}"
                            FontFamily="Montserrat"
                            FontSize="18"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Left"/>

                        <ComboBox
                            x:Name="Lst_Language"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Right"
                            Width="200"
                            Height="25"
                            Margin="30,0,0,0"
                            Foreground="{StaticResource P1}"
                            FontFamily="Montserrat"
                            FontSize="14">

                            <ComboBoxItem
                                Content="English"/>

                            <ComboBoxItem
                                Content="Deutsch"/>

                            <ComboBoxItem
                                Content="Español"/>

                            <ComboBoxItem
                                Content="Français"/>

                            <ComboBoxItem
                                Content="中国人"/>

                            <ComboBoxItem
                                Content="Português"/>

                            <ComboBoxItem 
                                Content="Pусский"/>
                        </ComboBox>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </Grid>

        <Button
            x:Name="Btn_Apply"
            Click="Btn_Apply_Click"
            Width="150"
            Height="35"
            VerticalAlignment="Bottom"
            Margin="0,0,0,45"
            Foreground="{DynamicResource T}"
            Background="{DynamicResource P1}"
            BorderThickness="2"
            BorderBrush="{DynamicResource S1}"
            FontFamily="Montserrat"
            FontSize="20"
            FontWeight="Bold"
            Content="Apply"/>
    </Grid>
</Window>
