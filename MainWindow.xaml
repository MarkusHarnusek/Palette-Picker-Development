<Window x:Class="PalettePicker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PalettePicker"
        mc:Ignorable="d"
        d:DataContext="{d:DesignInstance Type=local:MainWindow, IsDesignTimeCreatable=True}"
        ContentRendered="Window_ContentRendered"
        ResizeMode="NoResize"
        Title="Paltette Picker" 
        Height="470"
        Width="800"
        Background="{DynamicResource P1}">

    <StackPanel>
        <StackPanel  
           Height="25"  
           VerticalAlignment="Top"  
           Orientation="Horizontal">

            <Button  
               x:Name="Btn_Select"
               Click="Btn_Select_Click"
               Background="{DynamicResource S1}"
               Foreground="{DynamicResource T}"
               BorderThickness="0"
               Height="20"  
               Margin="2.5,0,0,0"
               Content="Select"  
               FontFamily="Montserrat"  
               FontWeight="DemiBold"  
               Width="90" />

            <Button  
                x:Name="Btn_Create"
                Click="Btn_Create_Click"
                Background="{DynamicResource S1}"
                Foreground="{DynamicResource T}"
                BorderThickness="0"
                Height="20"  
                Margin="2.5,0,0,0"
                Content="Create"  
                FontFamily="Montserrat"  
                FontWeight="DemiBold"  
                Width="90"/>

            <Button  
                x:Name="Btn_Save"
                Click="Btn_Save_Click"
                Background="{DynamicResource S1}"
                Foreground="{DynamicResource T}"
                BorderThickness="0"
                Height="20"  
                Margin="2.5,0,0,0"
                Content="Save"  
                FontFamily="Montserrat"  
                FontWeight="DemiBold"  
                Width="90"/>

            <Button  
                x:Name="Btn_Options"
                Click="Btn_Options_Click"
                Background="{DynamicResource S1}"
                Foreground="{DynamicResource T}"
                BorderThickness="0"
                Height="20"  
                Margin="2.5,0,0,0"
                Content="Options"  
                FontFamily="Montserrat"  
                FontWeight="DemiBold"  
                Width="90"/>
        </StackPanel>

        <StackPanel
            Height="24"
            Margin="0,10,0,10"
            VerticalAlignment="Center"
            HorizontalAlignment="Center"
            Orientation="Horizontal" LostFocus="StackPanel_LostFocus">

            <TextBlock
                x:Name="Txt_PaletteNameTitle"
                Text="Palette Name:"
                Foreground="{DynamicResource T}"
                Background="Transparent"
                FontFamily="Montserrat"
                FontSize="18"
                FontWeight="Normal"
                TextAlignment="Center"/>

            <TextBox
                x:Name="Txb_PalleteName"
                KeyDown="Txb_PalleteName_KeyDown" 
                Margin="5,0,0,0"
                Height="20"
                Width="250"
                TextAlignment="Center"
                Background="{DynamicResource P1}"
                BorderBrush="{DynamicResource S1}"
                BorderThickness="2"
                Foreground="{DynamicResource T}"
                FontFamily="Montserrat"
                FontSize="14"/>

        </StackPanel>
        
        <StackPanel
            Orientation="Horizontal"
            Height="340"
            Width="760"
            VerticalAlignment="Bottom"
            HorizontalAlignment="Center"
            Margin="0,5,0,0">

            <Grid
                x:Name="Grd_Primary1"
                Background="#FFFFFF"
                Width="152">

                <Button
                    x:Name="Btn_Primary1"
                    Click="Btn_Primary1_Click"
                    Background="Transparent"
                    Foreground="Transparent"
                    BorderBrush="Transparent"/>

                <StackPanel
                    Width="110"
                    Height="57"
                    Margin="0,208,0,0"
                    Background="{DynamicResource P1}">

                    <TextBlock
                        x:Name="Txt_Primary1Title"
                        Text="Primary 1"
                        HorizontalAlignment="Center"
                        Foreground="{DynamicResource T}"
                        FontFamily="Montserrat"
                        FontSize="14"/>


                    <TextBlock
                        x:Name="Txt_Primary1"
                        Text="HEX"
                        HorizontalAlignment="Center"
                        Foreground="{DynamicResource T}"
                        FontFamily="Montserrat"
                        FontWeight="Light"
                        FontSize="13"/>

                    <Button
                        x:Name="Btn_Primary1_Edit"
                        Click="Btn_Primary1_Edit_Click"
                        Content="Edit"
                        Height="20"
                        FontSize="12"
                        FontFamily="Montserrat"
                        Foreground="{DynamicResource T}"
                        Background="{DynamicResource S1}"
                        BorderThickness="0"
                        Margin="2"/>
                </StackPanel>
            </Grid>

            <Grid
                x:Name="Grd_Primary2"
                Background="#FFFFFF"
                Width="152">

                <Button
                    x:Name="Btn_Primary2"
                    Click="Btn_Primary2_Click"
                    Background="Transparent"
                    Foreground="Transparent"
                    BorderBrush="Transparent"/>

                <StackPanel
                    Width="110"
                    Height="57"
                    Margin="0,208,0,0"
                    Background="{DynamicResource P1}">

                    <TextBlock
                        x:Name="Txt_Primary2Title"
                        Text="Primary 2"
                        HorizontalAlignment="Center"
                        Foreground="{DynamicResource T}"
                        FontFamily="Montserrat"
                        FontSize="14"/>


                    <TextBlock
                        x:Name="Txt_Primary2"
                        Text="HEX"
                        HorizontalAlignment="Center"
                        Foreground="{DynamicResource T}"
                        FontFamily="Montserrat"
                        FontWeight="Light"
                        FontSize="13"/>

                    <Button
                        x:Name="Btn_Primary2_Edit"
                        Click="Btn_Primary2_Edit_Click"
                        Content="Edit"
                        Height="20"
                        FontSize="12"
                        FontFamily="Montserrat"
                        Foreground="{DynamicResource T}"
                        Background="{DynamicResource S1}"
                        BorderThickness="0"
                        Margin="2"/>
                </StackPanel>
            </Grid>

            <Grid
                x:Name="Grd_Secondary1"
                Background="#FFFFFF"
                Width="152">

                <Button
                    x:Name="Btn_Secondary1"
                    Click="Btn_Secondary1_Click"
                    Background="Transparent"
                    Foreground="Transparent"
                    BorderBrush="Transparent"/>

                <StackPanel
                    Width="110"
                    Height="57"
                    Margin="0,208,0,0"
                    Background="{DynamicResource P1}">

                    <TextBlock
                        x:Name="Txt_Secondary1Title"
                        Text="Secondary 1"
                        HorizontalAlignment="Center"
                        Foreground="{DynamicResource T}"
                        FontFamily="Montserrat"
                        FontSize="14"/>


                    <TextBlock
                        x:Name="Txt_Secondary1"
                        Text="HEX"
                        HorizontalAlignment="Center"
                        Foreground="{DynamicResource T}"
                        FontFamily="Montserrat"
                        FontWeight="Light"
                        FontSize="13"/>

                    <Button
                        x:Name="Btn_Secondary1_Edit"
                        Click="Btn_Secondary1_Edit_Click"
                        Content="Edit"
                        Height="20"
                        FontSize="12"
                        FontFamily="Montserrat"
                        Foreground="{DynamicResource T}"
                        Background="{DynamicResource S1}"
                        BorderThickness="0"
                        Margin="2"/>
                </StackPanel>
            </Grid>

            <Grid
                x:Name="Grd_Secondary2"
                Background="#FFFFFF"
                Width="152">

                <Button
                    x:Name="Btn_Secondary2"
                    Click="Btn_Secondary2_Click"
                    Background="Transparent"
                    Foreground="Transparent"
                    BorderBrush="Transparent"/>

                <StackPanel
                    Width="110"
                    Height="57"
                    Margin="0,208,0,0"
                    Background="{DynamicResource P1}">

                    <TextBlock
                        x:Name="Txt_Secondary2Title"
                        Text="Secondary 2"
                        HorizontalAlignment="Center"
                        Foreground="{DynamicResource T}"
                        FontFamily="Montserrat"
                        FontSize="14"/>


                    <TextBlock
                        x:Name="Txt_Secondary2"
                        Text="HEX"
                        HorizontalAlignment="Center"
                        Foreground="{DynamicResource T}"
                        FontFamily="Montserrat"
                        FontWeight="Light"
                        FontSize="13"/>

                    <Button
                        x:Name="Btn_Secondary2_Edit"
                        Click="Btn_Secondary2_Edit_Click"
                        Content="Edit"
                        Height="20"
                        FontSize="12"
                        FontFamily="Montserrat"
                        Foreground="{DynamicResource T}"
                        Background="{DynamicResource S1}"
                        BorderThickness="0"
                        Margin="2"/>
                </StackPanel>
            </Grid>

            <Grid
                x:Name="Grd_Text"
                Background="#FFFFFF"
                Width="152">

                <Button
                    x:Name="Btn_Text"
                    Click="Btn_Text_Click"
                    Background="Transparent"
                    Foreground="Transparent"
                    BorderBrush="Transparent"/>

                <StackPanel
                    Width="110"
                    Height="57"
                    Margin="0,208,0,0"
                    Background="{DynamicResource P1}">

                    <TextBlock
                        x:Name="Txt_TextTitle"
                        Text="Text"
                        HorizontalAlignment="Center"
                        Foreground="{DynamicResource T}"
                        FontFamily="Montserrat"
                        FontSize="14"/>


                    <TextBlock
                        x:Name="Txt_Text"
                        Text="HEX"
                        HorizontalAlignment="Center"
                        Foreground="{DynamicResource T}"
                        FontFamily="Montserrat"
                        FontWeight="Light"
                        FontSize="13"/>

                    <Button
                        x:Name="Btn_Text_Edit"
                        Click="Btn_Text_Edit_Click"
                        Content="Edit"
                        Height="20"
                        FontSize="12"
                        FontFamily="Montserrat"
                        Foreground="{DynamicResource T}"
                        Background="{DynamicResource S1}"
                        BorderThickness="0"
                        Margin="2"/>
                </StackPanel>
            </Grid>
        </StackPanel>
    </StackPanel>
</Window>
