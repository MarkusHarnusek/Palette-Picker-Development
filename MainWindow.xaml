<Window x:Class="PalettePicker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PalettePicker"
        mc:Ignorable="d"
        ContentRendered="Window_ContentRendered"
        ResizeMode="NoResize"
        Title="Paltette Picker" 
        Height="470"
        Width="800"
        Background="#0B0F0F">

    <Window.Resources>
        
        <SolidColorBrush x:Key="Background" Color="#0B0F0F"/>
        <SolidColorBrush x:Key="Primary" Color="#2C6FBB"/>
        <SolidColorBrush x:Key="Text" Color="#FAF9FE"/>
    </Window.Resources>

    <StackPanel>
        <StackPanel  
           Height="25"  
           VerticalAlignment="Top"  
           Orientation="Horizontal">

            <Button  
               x:Name="Btn_Select"
               Click="Btn_Select_Click"
               Background="{StaticResource Primary}"
               Foreground="{StaticResource Text}"
               BorderThickness="0"
               Height="20"  
               Margin="2.5,0,0,0"
               Content="Select"  
               FontFamily="Montserrat"  
               FontWeight="DemiBold"  
               Width="75" />

            <Button  
                x:Name="Btn_Create"
                Click="Btn_Create_Click"
                Background="{StaticResource Primary}"
                Foreground="{StaticResource Text}"
                BorderThickness="0"
                Height="20"  
                Margin="2.5,0,0,0"
                Content="Create"  
                FontFamily="Montserrat"  
                FontWeight="DemiBold"  
                Width="75"/>

            <Button  
                x:Name="Btn_Save"
                Click="Btn_Save_Click"
                Background="{StaticResource Primary}"
                Foreground="{StaticResource Text}"
                BorderThickness="0"
                Height="20"  
                Margin="2.5,0,0,0"
                Content="Save"  
                FontFamily="Montserrat"  
                FontWeight="DemiBold"  
                Width="75"/>
        </StackPanel>

        <StackPanel
            Height="24"
            Margin="0,10,0,10"
            VerticalAlignment="Center"
            HorizontalAlignment="Center"
            Orientation="Horizontal" LostFocus="StackPanel_LostFocus">

            <TextBlock
                Text="Palette Name:"
                Foreground="{StaticResource Text}"
                Background="Transparent"
                FontFamily="Montserrat"
                FontSize="18"
                FontWeight="Normal"
                TextAlignment="Center"/>

            <TextBox
                x:Name="Txb_PalleteName"
                KeyDown="Txb_PalleteName_KeyDown" 
                Margin="5,0,0,0"
                Height="20"
                Width="250"
                TextAlignment="Center"
                Background="{StaticResource Background}"
                BorderBrush="{StaticResource Primary}"
                BorderThickness="2"
                Foreground="{StaticResource Text}"
                FontFamily="Montserrat"
                FontSize="14"/>

        </StackPanel>
        
        <StackPanel
            Orientation="Horizontal"
            Height="340"
            Width="760"
            VerticalAlignment="Bottom"
            HorizontalAlignment="Center"
            Margin="0,5,0,0">

            <Grid
                x:Name="Grd_Primary1"
                Background="#FFFFFF"
                Width="152">

                <Button
                    x:Name="Btn_Primary1"
                    Click="Btn_Primary1_Click"
                    Background="Transparent"
                    Foreground="Transparent"
                    BorderBrush="Transparent"/>

                <StackPanel
                    Width="90"
                    Height="57"
                    Margin="0,208,0,0"
                    Background="{StaticResource Background}">

                    <TextBlock
                        Text="Primary 1"
                        HorizontalAlignment="Center"
                        Foreground="{StaticResource Text}"
                        FontFamily="Montserrat"
                        FontSize="14"/>


                    <TextBlock
                        x:Name="Txt_Primary1"
                        Text="HEX"
                        HorizontalAlignment="Center"
                        Foreground="{StaticResource Text}"
                        FontFamily="Montserrat"
                        FontWeight="Light"
                        FontSize="13"/>

                    <Button
                        x:Name="Btn_Primary1_Edit"
                        Click="Btn_Primary1_Edit_Click"
                        Content="Edit"
                        Height="20"
                        FontSize="12"
                        FontFamily="Montserrat"
                        Foreground="{StaticResource Text}"
                        Background="{StaticResource Primary}"
                        BorderThickness="0"
                        Margin="2"/>
                </StackPanel>
            </Grid>

            <Grid
                x:Name="Grd_Primary2"
                Background="#FFFFFF"
                Width="152">

                <Button
                    x:Name="Btn_Primary2"
                    Click="Btn_Primary2_Click"
                    Background="Transparent"
                    Foreground="Transparent"
                    BorderBrush="Transparent"/>

                <StackPanel
                    Width="90"
                    Height="57"
                    Margin="0,208,0,0"
                    Background="{StaticResource Background}">

                    <TextBlock
                        Text="Primary 2"
                        HorizontalAlignment="Center"
                        Foreground="{StaticResource Text}"
                        FontFamily="Montserrat"
                        FontSize="14"/>


                    <TextBlock
                        x:Name="Txt_Primary2"
                        Text="HEX"
                        HorizontalAlignment="Center"
                        Foreground="{StaticResource Text}"
                        FontFamily="Montserrat"
                        FontWeight="Light"
                        FontSize="13"/>

                    <Button
                        x:Name="Btn_Primary2_Edit"
                        Click="Btn_Primary2_Edit_Click"
                        Content="Edit"
                        Height="20"
                        FontSize="12"
                        FontFamily="Montserrat"
                        Foreground="{StaticResource Text}"
                        Background="{StaticResource Primary}"
                        BorderThickness="0"
                        Margin="2"/>
                </StackPanel>
            </Grid>

            <Grid
                x:Name="Grd_Secondary1"
                Background="#FFFFFF"
                Width="152">

                <Button
                    x:Name="Btn_Secondary1"
                    Click="Btn_Secondary1_Click"
                    Background="Transparent"
                    Foreground="Transparent"
                    BorderBrush="Transparent"/>

                <StackPanel
                    Width="90"
                    Height="57"
                    Margin="0,208,0,0"
                    Background="{StaticResource Background}">

                    <TextBlock
                        Text="Secondary 1"
                        HorizontalAlignment="Center"
                        Foreground="{StaticResource Text}"
                        FontFamily="Montserrat"
                        FontSize="14"/>


                    <TextBlock
                        x:Name="Txt_Secondary1"
                        Text="HEX"
                        HorizontalAlignment="Center"
                        Foreground="{StaticResource Text}"
                        FontFamily="Montserrat"
                        FontWeight="Light"
                        FontSize="13"/>

                    <Button
                        x:Name="Btn_Secondary1_Edit"
                        Click="Btn_Secondary1_Edit_Click"
                        Content="Edit"
                        Height="20"
                        FontSize="12"
                        FontFamily="Montserrat"
                        Foreground="{StaticResource Text}"
                        Background="{StaticResource Primary}"
                        BorderThickness="0"
                        Margin="2"/>
                </StackPanel>
            </Grid>

            <Grid
                x:Name="Grd_Secondary2"
                Background="#FFFFFF"
                Width="152">

                <Button
                    x:Name="Btn_Secondary2"
                    Click="Btn_Secondary2_Click"
                    Background="Transparent"
                    Foreground="Transparent"
                    BorderBrush="Transparent"/>

                <StackPanel
                    Width="90"
                    Height="57"
                    Margin="0,208,0,0"
                    Background="{StaticResource Background}">

                    <TextBlock
                        Text="Secondary 2"
                        HorizontalAlignment="Center"
                        Foreground="{StaticResource Text}"
                        FontFamily="Montserrat"
                        FontSize="14"/>


                    <TextBlock
                        x:Name="Txt_Secondary2"
                        Text="HEX"
                        HorizontalAlignment="Center"
                        Foreground="{StaticResource Text}"
                        FontFamily="Montserrat"
                        FontWeight="Light"
                        FontSize="13"/>

                    <Button
                        x:Name="Btn_Secondary2_Edit"
                        Click="Btn_Secondary2_Edit_Click"
                        Content="Edit"
                        Height="20"
                        FontSize="12"
                        FontFamily="Montserrat"
                        Foreground="{StaticResource Text}"
                        Background="{StaticResource Primary}"
                        BorderThickness="0"
                        Margin="2"/>
                </StackPanel>
            </Grid>

            <Grid
                x:Name="Grd_Text"
                Background="#FFFFFF"
                Width="152">

                <Button
                    x:Name="Btn_Text"
                    Click="Btn_Text_Click"
                    Background="Transparent"
                    Foreground="Transparent"
                    BorderBrush="Transparent"/>

                <StackPanel
                    Width="90"
                    Height="57"
                    Margin="0,208,0,0"
                    Background="{StaticResource Background}">

                    <TextBlock
                        Text="Text"
                        HorizontalAlignment="Center"
                        Foreground="{StaticResource Text}"
                        FontFamily="Montserrat"
                        FontSize="14"/>


                    <TextBlock
                        x:Name="Txt_Text"
                        Text="HEX"
                        HorizontalAlignment="Center"
                        Foreground="{StaticResource Text}"
                        FontFamily="Montserrat"
                        FontWeight="Light"
                        FontSize="13"/>

                    <Button
                        x:Name="Btn_Text_Edit"
                        Click="Btn_Text_Edit_Click"
                        Content="Edit"
                        Height="20"
                        FontSize="12"
                        FontFamily="Montserrat"
                        Foreground="{StaticResource Text}"
                        Background="{StaticResource Primary}"
                        BorderThickness="0"
                        Margin="2"/>
                </StackPanel>
            </Grid>
        </StackPanel>
    </StackPanel>
</Window>
