<Window x:Class="PalettePicker.Windows.SaveWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PalettePicker.Windows"
        mc:Ignorable="d"
        Title="SaveWindow"
        Height="450" 
        Width="300"
        Background="{DynamicResource P1}" SizeChanged="Window_SizeChanged">

    <Grid
        Margin="25">

        <Grid.RowDefinitions>

            <RowDefinition 
                Height="Auto"/>

            <RowDefinition 
                Height="*"/>
        </Grid.RowDefinitions>

        <Viewbox
            Stretch="Uniform"
            MaxHeight="40"
            MaxWidth="250"
            Margin="25,5,25,5">

            <TextBlock
                x:Name="Txt_WindowTitle"
                Text="Save the current palette"
                Foreground="{DynamicResource T}"
                FontFamily="{StaticResource MontserratFontFamily}"
                HorizontalAlignment="Center"/>
        </Viewbox>

        <Border
            Grid.Row="1"
            BorderBrush="{DynamicResource P2}"
            BorderThickness="1"
            CornerRadius="15">

            <Grid>

                <Grid.RowDefinitions>

                    <RowDefinition 
                        Height="Auto"/>

                    <RowDefinition 
                        Height="*"/>
                </Grid.RowDefinitions>

                <Grid>

                    <Grid.RowDefinitions>
                        
                        <RowDefinition 
                            Height="Auto"/>
                        
                        <RowDefinition 
                            Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <Grid
                        Grid.Row="0"
                        Margin="70,5,70,0">

                        <Viewbox
                            Stretch="Uniform"
                            VerticalAlignment="Center"
                            MaxHeight="20"
                            Margin="22,0,22,0">

                            <TextBlock
                                x:Name="Txt_Txb_Name"
                                Text="Name"
                                Foreground="{DynamicResource T}"
                                FontFamily="{StaticResource MontserratFontFamily}"
                                FontWeight="Light"
                                HorizontalAlignment="Center"/>
                        </Viewbox>
                    </Grid>

                    <Grid 
                        Grid.Row="1"
                        Margin="0,5,0,0" 
                        MinHeight="18"
                        VerticalAlignment="Stretch">
                        
                        <TextBox
                            x:Name="Txb_Name"
                            Style="{StaticResource TextBox_BorderBrush_Fade}"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Stretch"
                            Margin="10,0"
                            MinWidth="150"
                            MaxWidth="300"
                            TextWrapping="NoWrap"/>
                    </Grid>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</Window>
